{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["firebase-admin"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}